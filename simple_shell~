#include <stdlib.h>
#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>

#define PROMPT "#cisfun$"

int main(void)
{
	char *input = NULL;
	size_t len = 0;

	while (1)
	{
		printf("%s", PROMPT);

		if (getline(&input, &len, stdin) == -1)
		{		
			if (feof(stdin))
			{
				printf("\n");
				break;
			}
		}

		if (input[len - 1] == '\n')
		{
			input[len -1] = '\0';
		}

		pid_t child_pid = fork();

		if (child_pid == -1)
		{
			perror("fork");
			exit(EXIT_FAILURE);
		}

		if (child_pid == 0)
		{
			execlp(input, input, (char *)NULL);
			perror(input);
			exit(EXIT_FAILURE);
		}
		else
		{
			wait(NULL);
		}
	}
	free(input);
	return (0);
}
